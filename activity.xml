<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hppavilion.connect.MainActivity"
    android:background="@drawable/bkg">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:columnCount="3"
        android:rowCount="3"
        tools:ignore="RtlHardcoded,UselessParent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/threegrid"
        android:id="@+id/gridLayout1">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView3"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:layout_row="0"
            android:onClick="dropIn"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:tag="1"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView4"
            tools:ignore="ContentDescription"
            android:layout_row="0"
            android:onClick="dropIn"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_margin="10dp"
            android:tag="0"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView5"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="dropIn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:tag="2"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView8"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:layout_row="1"
            android:onClick="dropIn"
            android:layout_column="2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:tag="5"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView6"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="dropIn"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:tag="3"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView1"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:layout_row="2"
            android:onClick="dropIn"
            android:layout_column="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:tag="8"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="92dp"
            android:id="@+id/imageView10"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="dropIn"
            android:tag="7"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView11"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:onClick="dropIn"
            android:tag="6"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/imageView7"
            tools:ignore="ContentDescription,RtlHardcoded"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:onClick="dropIn"
            android:tag="4"
            />

    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/playAgainLayout"
        android:background="@color/colorAccent"
        android:visibility="invisible"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginBottom="26dp"
        android:layout_alignBottom="@+id/gridLayout1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="67dp"
        android:layout_width="200dp">


        <Button
            android:text="Play Again"
            android:layout_height="wrap_content"
            android:id="@+id/playAgainButton"
            android:layout_weight="1"
            android:layout_width="100dp"
            tools:ignore="HardcodedText,InefficientWeight"
            android:onClick="playMore"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/custom_button">

        </Button>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="350dp"
        android:layout_height="150dp"
        tools:ignore="ObsoleteLayoutParam">

        <TextView
            android:text="Let's see who wins..."
            android:layout_width="300dp"
            android:id="@+id/textView5"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:textSize="45sp"
            android:textStyle="normal|bold|italic"
            android:fontFamily="cursive"
            android:textColor="#920edf"
            tools:ignore="HardcodedText,InefficientWeight" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:gravity="bottom|left"
        tools:ignore="RtlHardcoded">

        <Button
            android:text="RESTART"
            android:layout_width="wrap_content"
            android:id="@+id/restartButton"
            android:layout_weight="1"
            android:onClick="Restart"
            android:textSize="35sp"
            android:textColor="#f9f7ef"
            android:textStyle="normal|bold|italic"
            android:textAllCaps="false"
            android:background="#000000"
            tools:ignore="HardcodedText,InefficientWeight"
            android:layout_height="50dp" />
    </LinearLayout>

</RelativeLayout>
